<form name="contact" method="POST" netlify>
    <div class="form-group">
        <label for="name">Name</label>
        <input
            type="text"
            name="name"
            id="name"
            placeholder="Your first and last name"
            required="true"
            class="form-control" />
    </div>

    <div class="form-group">
        <label>Will you be joining us?</label>
        <div class="radio">
            <label>
                <input type="radio" class="attending_input" name="attending" required="true" value="yes">
                "Yes!"
            </label>
        </div>
        <div class="radio">
            <label>
                <input type="radio" class="attending_input" name="attending" required="true" value="no">
                "I regret to inform you that I will be unable to attend."
            </label>
        </div>
    </div>

    <div id="show_only_if_attending">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email"
                name="email"
                id="email"
                placeholder="Your email address"
                class="form-control" />
        </div>

        <div class="form-group">
            <label for="attendees">Who will be attending?</label>
            <textarea
                name="attendees"
                id="attendees"
                placeholder="List of attendees, including yourself"
                rows="3"
                class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group">
        <label for="message">Anything else we need to know?</label>
        <textarea
            name="message"
            id="message"
            rows="4"
            class="form-control"
            ></textarea>
    </div>

    <button
            type="submit"
            name="submit"
            class="btn btn-default">
        Répondez s'il vous plaît!
        (French for "RSVP")
    </button>
</form>
