<form name="contact" method="POST" netlify>
    <div class="form-group">
        <label for="name">Name</label>
        <input
            type="text"
            name="name"
            id="name"
            autocomplete="name"
            placeholder="Your name"
            title="Please enter your name"
            class="form-control"
            required />
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email"
            name="email"
            id="email"
            autocomplete="email"
            placeholder="Your email address"
            class="form-control"
            required />
    </div>
    <div class="form-group">
        <label for="message">Who all will be attending?</label>
        <textarea
            name="message"
            id="message"
            placeholder="List of attendees, including yourself"
            rows="3"
            class="form-control"
            required></textarea>
    </div>
    <label>How long do you think you'll be staying?</label>
    <div class="checkbox">
        <label>
            <input type="checkbox" name="friday_night" />
            Friday night
        </label>
    </div>
    <div class="checkbox">
        <label>
            <input type="checkbox" name="saturday_morning" />
            Saturday morning
        </label>
    </div>
    <div class="checkbox">
        <label>
            <input type="checkbox" name="satuday_evening" checked disabled />
            Satuday evening
        </label>
    </div>
    <div class="checkbox">
        <label>
            <input type="checkbox" name="sunday_morning" />
            Sunday morning
        </label>
    </div>
    <button
            type="submit"
            name="submit"
            class="btn btn-default">
        Send Message
    </button>
</form>
